{
    "name": "orange-bot",
    "version": "1.0.0",
    "description": "orangeðŸŸ  Discord Bot",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "docker-deploy": "node scripts/docker-deploy-v3.js",
        "purge-commands": "node scripts/purge-commands.js",
        "setup": "git submodule update --init && npm install && cd local_modules/orange-common-lib && npm install && cd ../orange-bot-base && npm install",
        "sync-modules-gh-actions": "git submodule sync --recursive && git -c protocol.version=2 submodule update --init --force --depth=1 --recursive",
        "build": "cd local_modules/orange-common-lib && tsc && cd ../orange-bot-base && tsc && cd ../.. && tsc",
        "dev": "tsc && node dist/index.js",
        "prod": "NODE_ENV=production node dist/index.js",
        "prod-win": "set NODE_ENV=production&& node dist/index.js",
        "gen-secret": "node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"",
        "gen-token": "node -e \"console.log(require('jsonwebtoken').sign({id: process.argv[2]}, process.argv[1], {expiresIn:'1y'}))\"",
        "verify-token": "node -e \"console.log(require('jsonwebtoken').verify(process.argv[1], process.argv[2]))\""
    },
    "keywords": [],
    "author": "",
    "license": "BSD-3",
    "dependencies": {
        "@supabase/supabase-js": "^2.45.3",
        "ascii-table3": "^0.9.0",
        "chalk": "^5.3.0",
        "discord.js": "14.12.1",
        "dotenv": "^16.4.5",
        "fastify": "^4.28.1",
        "fs-extra": "^11.2.0",
        "html-entities": "^2.5.2",
        "jsonwebtoken": "^9.0.2",
        "node-html-markdown": "^1.3.0",
        "node-html-to-image": "^5.0.0",
        "node-schedule": "^2.1.1",
        "node-ssh": "^13.2.0",
        "openai": "^4.58.1",
        "orange-bot-base": "file:local_modules/orange-bot-base",
        "orange-common-lib": "file:local_modules/orange-common-lib",
        "pocketbase": "^0.21.5",
        "puppeteer": "^23.3.0",
        "sha256": "^0.2.0",
        "sqlite3": "^5.1.7",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@types/deasync": "^0.1.5",
        "@types/dompurify": "^3.0.5",
        "@types/fs-extra": "^11.0.4",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^22.5.4",
        "@types/node-schedule": "^2.1.7",
        "@types/sha256": "^0.2.2",
        "country-list": "^2.3.0",
        "typescript": "^5.5.4"
    }
